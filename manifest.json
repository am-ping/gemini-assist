{
    "manifest_version": 3,
    "name": "Gemini Assist",
    "description": "Gemini Assistant",
    "version": "1.0",
    "permissions": [
        "storage",
        "sidePanel",
        "activeTab", 
        "tabs", 
        "scripting", 
        "tts"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "action": {
        "default_title": "Click to open side panel"
    },
    "icons": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    }
}